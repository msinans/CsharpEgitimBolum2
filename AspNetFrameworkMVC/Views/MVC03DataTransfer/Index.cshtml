
@{
    ViewBag.Title = "MVC03 Data Transfer";
}

<h2>MVC03 Data Transfer</h2>

<table class="table">
    <tr>
        <td>Ürün Kategorisi</td>
        <td>: @ViewBag.UrunKategorisi</td>
    </tr>
    <tr>
        <td>Ürün Adı</td>
        <td>: @ViewData["UrunAdi"]</td>
    </tr>
    <tr>
        <td>Ürün Fiyatı</td>
        <td>: @TempData["UrunFiyati"] TL</td>
    </tr>
</table>

<hr />

<h1>MVC de View dan Controller a Veri Gönderme</h1>

<h3>
    1- Get Metoduyla Veri gönderme
</h3>

<form action="/MVC03DataTransfer/Index" method="get">
    <input id="Text1" type="text" name="txtAra" />
    <input id="Submit1" type="submit" value="Ara" />
</form>

@ViewBag.GetVerisi

<h3>
    2- Post Metoduyla Veri gönderme
</h3>

@{
    var kategoriler = new SelectListItem[]
       {
        new SelectListItem() { Text = "Bilgisayar"},
        new SelectListItem() { Text = "Elektronik"},
        new SelectListItem() { Text = "Telefon"}
                               };
}

<form action="/MVC03DataTransfer/Index" method="post">
    @Html.TextBox("text1")
    <hr />
    @Html.DropDownList("ddListe", kategoriler)
    <hr />
    @Html.CheckBox("cbOnay") <label>Onaylıyorum</label>
    <hr />
    <input id="Submit1" type="submit" value="Gönder" />
</form>

<h2>1. Yöntem Parametrelerden Gelen Veriler</h2>

@ViewBag.Mesaj
<hr />
@ViewBag.MesajListe
<hr />
